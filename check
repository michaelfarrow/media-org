#!/bin/bash

TYPE="${1:-$TYPE}"

found_files=false

for file in ./*.$TYPE; do
	[ -f "${file}" ] || continue
	found_files=true
	break;
done

if [ "${found_files}" = "true" ]; then
	for f in ./*.$TYPE; do
		file="$(basename "${f}")"
		name="${file%.*}"
		ffmpeg -i "$f" -y -lavfi showspectrumpic=s=1000x800:mode=separate:start=20k:stop=30k "./${name}.png"
	done

	npx -y http-server -p 3131 -c-1
fi;